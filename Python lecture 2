for i in range(1, len(stock_prices)):
    daily_return = (stock_prices[i] - stock_prices[i-1]) / stock_prices[i-1]
    print(daily_return)

principal = 500
rate = 0.07  # 7% annual interest
years = 0

while principal < 1000:
    principal *= (1 + rate)
    years += 1

print(years)


principal = 500
rate = 0.07  # 7% annual interest
years = 0

while principal < 1000:
    principal *= (1 + rate)
    years += 1
    final_value= principal
    print(final_value)


